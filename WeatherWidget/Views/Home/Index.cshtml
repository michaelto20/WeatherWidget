@model WeatherWidget.Models.Weather

@{
    ViewBag.Title = "Weather Widget";
}

<div class="jumbotron">
    <h1>Weather Widget</h1>
    <p class="lead">See what the weather is like in your ZIP code!</p>
</div>

<div class="container">
    <div class="col-md-offset-3 col-md-8">
        <h2>Enter your ZIP code to see the weather.</h2>
    </div>
</div>
<div class="container">
    @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { id = "WeatherForm" }))
    {
        @Html.ValidationSummary(true);

        <div class="row col-md-offset-4 col-md-6">
            <input type="submit" value="Get Weather" />
            @Html.TextBoxFor(model => model.ZipCode)
            @Html.ValidationMessageFor(model => model.ZipCode)
        </div>
    }
</div>
<br />
@if(Model != null)
{
    <div class="container">
        <div class="col-md-offset-5 col-md-4">
            <div class="row">
                Temperature: @Model.Temperature;
            </div>
            <div class="row">
                Chance of Precipitation: @Model.PrecipitationChance;
            </div>
            <div class="row">
                Description: @Model.Description;
            </div>
        </div>
    </div>
}